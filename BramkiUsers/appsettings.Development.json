{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    // Set the connection strings for the databases here
    "Raportowanie": "Server=SERVER_NAME;Database=DB_NAME;User ID=LOGIN;Password=PASSWORD;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=True;Application Name=BramkiUsers",
    "HR": "Server=SERVER_NAME;Database=DB_NAME;User ID=LOGIN;Password=PASSWORD;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=True;Application Name=BramkiUsers"
  },
  "Viso": {
    // Set the actual API server address and credentials here
    "BaseUrl": "http://API_Server_Address",
    "SendTimeoutSeconds": 15,
    "ReceiveTimeoutSeconds": 15,
    "OperationTimeoutSeconds": 20,
    "KeepAliveMinutes": 5,
    "ServiceAccount": {
      "Login": "API_Login",
      "Password": "API_Password"
    }
  },
  // Set the actual SMTP server details here
  "Smtp": {
    "Host": "SMTP_Server_Address",
    "Port": 25,
    "From": "BramkiApp-no-reply@company.com",
    "UseTls": false,
    "UseDefaultCredentials": false
  },
  "AllowedHosts": "*",
  "Auth": {
    "Groups": {
      // Set the Active Directory SID of the groups here
      "All": "S-1-5-32-544",
      "Admin": "S-1-5-32-544",
      "HR": "S-1-5-32-544",
      "Karty": "S-1-5-32-544",
      "Ochrona": "S-1-5-32-544"
    }
  },
  "MailBranding": {
    "FooterPath": "wwwroot/footer/mail-footer.html",
    "Images": [
      {
        // Used to reference an image in the HTML
        "ContentId": "footer-logo",
        "Path": "wwwroot/footer/footer-logo.png",
        "MediaType": "image/png"
      }
    ]
  }
}